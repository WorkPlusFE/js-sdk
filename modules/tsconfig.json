{
  "compilerOptions": {
    "baseUrl": ".",
    "moduleResolution": "node",
    "target": "es6",
    "importHelpers": false,
    "module": "es2015",
    "lib": ["es2015", "es2016", "es2017", "dom"],
    "strict": true,
    "noImplicitAny": true,
    "sourceMap": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "typeRoots": ["../node_modules/@types", "./**/*/typings"]
  },
  "include": ["**/*.ts", "**/*.tsx", "./**/*/typings"]
}
